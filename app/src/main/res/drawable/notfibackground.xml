<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed (clicked) state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background color -->
            <item>
                <shape>
                    <solid android:color="#EFEFEF" /> <!-- Change to your desired color -->
                </shape>
            </item>
            <!-- Shadow -->
            <item android:right="2dp" android:top="2dp">
                <shape>
                    <solid android:color="#80000000" /> <!-- Shadow color -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default button state (not pressed) -->
    <item>
        <layer-list>
            <!-- Background color -->
            <item>
                <shape>
                    <solid android:color="#FFFFFF" /> <!-- Change to your desired color -->
                </shape>
            </item>
            <!-- Shadow -->
            <item android:right="2dp" android:top="2dp">
                <shape>
                    <solid android:color="#00000000" /> <!-- Transparent shadow for the default state -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>